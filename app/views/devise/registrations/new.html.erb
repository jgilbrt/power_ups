<div style="
  height: 100vh;
  background:
    linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.6)),
    url('https://media.tenor.com/986PZ_TFnCoAAAAM/shiryu-saint.gif') no-repeat center center fixed;
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
">
  <div style="max-width: 400px; width: 100%; background: #f8f9fa; padding: 2rem; border-radius: 1rem; box-shadow: 0 0 15px rgba(0,0,0,0.3);">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 style="text-align: center; margin-bottom: 1.5rem;">Sign Up</h2>

      <%= f.error_notification(class: "alert alert-danger") %>

      <div class="form-inputs mb-3">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" },
                    label_html: { class: "form-label fw-semibold" } %>

        <%= f.input :username,
                    required: true,
                    input_html: { autocomplete: "username", class: "form-control" },
                    label_html: { class: "form-label fw-semibold" } %>

        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-control" },
                    label_html: { class: "form-label fw-semibold" } %>

        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-control" },
                    label_html: { class: "form-label fw-semibold" } %>
      </div>

      <div class="form-actions text-center" style="margin-bottom: 1rem;">
        <%= f.button :submit, "Sign up", class: "btn btn-lg w-100 rounded-pill",
                     style: "background-color: #ff6600; border-color: #ff6600; color: white;" %>
      </div>
    <% end %>

    <div style="text-align: center; color: #333;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
